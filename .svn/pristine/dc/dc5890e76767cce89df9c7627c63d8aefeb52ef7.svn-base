html, body, nav, ul, li, table, td, tr, section, header, div, p, span, img, h1, h2, h3 {
	margin: 0;
	padding: 0;
}

img {
	max-width: 100%;
}

html {
	font: normal 14px Helvetica, Arial, 'DejaVu Sans', 'Liberation Sans', Freesans, sans-serif;
    
}

body
{
	background: url(../img/bg_2_.png);
	#wrapper {
		width: 1000px;
		margin: 0 auto;
		text-align: center;
		margin-top: 50px;
		.unit {
			font-size: 1.2rem;
			span {
				color: #A00;
				border-right: 1px solid black;
				margin-right: 5px;
				padding-right: 5px;
			}
		}

		.building-holder {
			width: 250px;
			display: inline-block;
		}
	}
}